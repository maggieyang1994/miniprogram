/* components/editPhoto/editPhoto.wxss */
.fullWidth{
  width: 100%
}
.fullHeight{
  height: 100%
}
.EditPhoto{
  height:100%;
  width: 100%;
  display: flex;
  flex-direction: column
}
.movable{
  border: 1rpx solid rgba(37,120,255, 0.6);
  position:absolute;
  left: 0;
  top: 0;
}
.point-line{
  width: 50rpx;
  height: 50rpx;
  border-color: rgba(37,120,255, 1);
  position: absolute
}
.top{
  top: 0;
  
}
.bottom {
  bottom: 0
}
.left {
  left : 0
}
.right{
  right: 0
}
.pl-left{
  left: 50%;
  transform: translateX(-50%)
}

.pl-top{
  top: 50%;
  transform: translateY(-50%)
}
.br-left{
  border-left:6rpx solid;
}
.br-right{
  border-right:6rpx solid;
}

.br-top{
  border-top:6rpx solid;
}
.br-bottom{
  border-bottom:6rpx solid;
}

.imageWrapper{
  flex-grow: 1;
  margin: auto;
  width: 100%;
  display: flex;
  justify-content: center
}
.sourceImg{
  display:block;
  width:100%;
  height: 100%
}